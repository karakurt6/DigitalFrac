<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalFrac"
             xmlns:Controls="clr-namespace:Slb.Ocean.Petrel.UI.Wpf.Controls;assembly=Slb.Ocean.Petrel.UI.Wpf.Controls" 
             x:Class="DigitalFrac.View.OperationPresentation"
             xmlns:viewModels="clr-namespace:DigitalFrac"
             d:DataContext="{d:DesignInstance Type=viewModels:FracOperationViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto" MinHeight="45" />
        </Grid.RowDefinitions>
        <Controls:SearchableDropBox
            ToolTipService.IsEnabled="true"
            ToolTipHeader="Input well"
            ToolTipText="Select a well from the input pane"
            DomainObject="{Binding SearchableDropboxInput}"
            InputValidationManifest="{Binding Path=ValidateInput,Mode=OneWay}" Margin="0,25,0,335"/>
        <Controls:ApplyOKCancelButtons Grid.Row="1"
            IsApplyButtonVisible="false"
            OkCommand="{Binding OkCommand}"
            CancelCommand="{Binding CancelCommand}"/>
    </Grid>
</UserControl>
